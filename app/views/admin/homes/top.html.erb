<body>
 <main>
  <div class="container">
   <div class="row">
    <div class="col">
     <p id="notice"></p>
     <div class="bg-light"><h3>注文履歴一覧</h3></div>
      <p></p>
      <table class="table table-borderless">
       <thead class="thead-light">
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
       </thead>
       <% @orders.each do |order| %>
　　　 <tbody>
        <tr>
          <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M'), admin_order_path(order.id) %></td>
          <td><%= order.customer.first_name %><%= order.customer.last_name %></td>
          <td><%= order.order_details.all.sum(:quantity) %></td>
          <td><%= order.status_i18n %></td>
        </tr>
       </tbody>
       <% end %>
      </table>
      </div>
　 </div>
　</div>
 </main>
</body>
