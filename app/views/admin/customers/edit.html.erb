<body>
 <main>
  <div class="container">
   <div class="row">
    <div class="col">
     <div class="bg-light"><h1><%= @customer.first_name %><% @customer.last_name %>会員情報編集</h1></div>
     <p id="notice"></p>


       <%= form_with model: @customer, url: admin_customer_path(@customer.id) do |f| %>


     <div class="form-row">

      <table class="table table-borderless">
       <thead class="thead-light">
       <tr>
        <td>会員ID</td>
        <td><%= @customer.id %></td>
       </tr>
       <tr>
        <td><%= f.label "名前" %></td>
        <td><%= f.text_field :first_name, class: "form-control", :placeholder => "令和" %></td>
        <td><%= f.text_field :last_name, class: "form-control", :placeholder => "道子" %></td>
       </tr>
       <tr>
         <td><%= f.label "フリガナ" %></td>
         <td><%= f.text_field :first_name_kana, class: "form-control", :placeholder => "レイワ" %></td>
         <td><%= f.text_field :last_name_kana, class: "form-control", :placeholder => "ミチコ" %></td>
       </tr>
       </thead>
      </table>
     </div>

     <div class="row mb-3">
      <%= f.label '郵便番号', class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
      <%= f.text_field :postal_code, class: "form-control", :placeholder => "0000000" %>
      </div>
     </div>
     <div class="row mb-3">
      <%= f.label '住所', class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
      <%= f.text_field :address, class: "form-control", :placeholder => "東京都さいたま市おおさか123" %>
      </div>
     </div>

     <div class="row mb-3">
      <%= f.label '電話番号', class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
      <%= f.text_field :telephone_number, class: "form-control", :placeholder => "0000000000" %>
      </div>
     </div>

     <div class="row mb-3">
      <%= f.label 'メールアドレス', class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
      <%= f.email_field :email, class: "form-control", :placeholder => "sample@example.com", autofocus: true, autocomplete: "email" %>
      </div>
     </div>

     <div class="row mb-3">
      <%= f.label '会員ステータス', class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
       <%= f.radio_button :is_deleted, :false %>有効
       <%= f.radio_button :is_deleted, :true %>退会
      </div>
     </div>

     <div class="container text-center">
      <div class="row">
       <div class="col">
       <%= f.submit "変更を保存", class: "btn btn-success mr-5" %>
       </div>
      </div>
     </div>
    <% end %>
　　</div>
　 </div>
　</div>
 </main>
</body>
