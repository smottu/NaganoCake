



<h1>　商品編集　</h1>
<%= form_with model: @item, url: admin_item_path(@item) do |f| %>

<p>商品画像</p>
<%= f.file_field :image, accept: "image/*" %>
<p>商品名</p>
<%= f.text_field :name %>
<p>商品説明</p>
<%= f.text_area :introduction %>
<p>ジャンル</p>
<%= f.label :genre %>
<%= f.collection_select :genre_id, @genres, :id, :name, {include_blank: "---"} %>
<p>税抜価格</p>
<%= f.text_field :price %>
<p>販売ステータス</p>
<label>
<%= f.radio_button :is_active, "販売中" %> 販売中 </label>
<label>
<%= f.radio_button :is_active, "販売停止中" %> 販売停止中</label>

<%= f.submit "変更を保存" %>
<% end %>