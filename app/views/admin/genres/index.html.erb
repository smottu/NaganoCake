<body>
 <main>
  <div class="container">
   <div class="row">
    <div class="col-md-6 col-md-offset-3">
     <div class="bg-light"><h3>ジャンル一覧・追加</h3></div>
     <p></p>



      <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
　　　<div class="form-group">
       <label class="form-inline" >ジャンル名</label>
       <%= f.text_field :name, :placeholder => "ジャンル" %>
       <%= f.submit '新規登録', class: 'btn btn-success'%>
      </div>

      <% end %>
      <table class="table">
       <thead class="thead-light">
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
       </thead>
      <% @genres.each do |genre| %>
　　　 <tbody>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to '編集する', edit_admin_genre_path(genre.id), class: 'btn btn-success' %></td>
        </tr>
       </tbody>
       <% end %>
      </table>
　　</div>
　 </div>
　</div>
 </main>
</body>
