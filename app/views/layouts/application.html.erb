<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>




  <body>
    <header>

       <% if customer_signed_in? then %>
       <nav class="navbar navbar-expand-lg navbar-light bg-light">
          <div class="container-fluid">
           <%= link_to 'ロゴ', root_path %>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
             <span class="navbar-toggler-icon"></span>
            </button>
              <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                 <li class="nav-item active">
                  <button class="btn btn-outline-secondary me-2" type="button">
                  <%= link_to 'マイページ', customers_mypage_path %></button>
                 </li>
                 <li class="nav-item ">
                  <button class="btn btn-outline-secondary me-2" type="button">
                  <%= link_to '商品一覧', items_path %></button>
                 </li>
                 <li class="nav-item">
                  <button class="btn btn-outline-secondary me-2" type="button">
                  <%= link_to 'カート', cart_items_path %></button>
                 </li>
                 <li class="nav-item">
                  <button class="btn btn-outline-secondary me-2" type="button">
                  <%= link_to 'ログアウト',  destroy_customer_session_path, method: :delete %></button>
                 </li>
                </ul>
              </div>
          </div>
        </nav>

        <% elsif admin_signed_in? %>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
          <div class="container-fluid">
           <%= link_to 'ロゴ', root_path %>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
             <span class="navbar-toggler-icon"></span>
            </button>
              <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                 <li class="nav-item active">
                  <button class="btn btn-outline-secondary me-2" type="button">
                  <%= link_to '商品一覧', admin_items_path %></button>
                 </li>
                 <li class="nav-item ">
                  <button class="btn btn-outline-secondary me-2" type="button">
                  <%= link_to '会員一覧', admin_customers_path %></button>
                 </li>
                 <li class="nav-item">
                  <button class="btn btn-outline-secondary me-2" type="button">
                  <%= link_to '注文履歴一覧', admin_path %></button>
                 </li>
                 <li class="nav-item">
                  <button class="btn btn-outline-secondary me-2" type="button">
                  <%= link_to 'ジャンル一覧', admin_genres_path %></button>
                 </li>
                 <li class="nav-item">
                  <button class="btn btn-outline-secondary me-2" type="button">
                  <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete %></button>
                 </li>
                </ul>
              </div>
          </div>
        </nav>

        <% else %>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
          <div class="container-fluid">
           <%= link_to 'ロゴ', root_path %>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
             <span class="navbar-toggler-icon"></span>
            </button>
              <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                 <li class="nav-item active">
                  <button class="btn btn-outline-secondary me-2" type="button">
                  <%= link_to 'About', about_path %></button>
                 </li>
                 <li class="nav-item ">
                  <button class="btn btn-outline-secondary me-2" type="button">
                  <%= link_to '商品一覧', items_path %></button>
                 </li>
                 <li class="nav-item">
                  <button class="btn btn-outline-secondary me-2" type="button">
                  <%= link_to '新規登録', new_customer_registration_path %></button>
                 </li>
                 <li class="nav-item">
                  <button class="btn btn-outline-secondary me-2" type="button">
                  <%= link_to 'ログイン', customer_session_path %></button>
                 </li>
                </ul>
              </div>
          </div>
        </nav>
        <% end %>
    </header>
    <%= yield %>
  </body>
</html>
