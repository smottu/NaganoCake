<body>
 <main>
  <div class="container">
   <div class="row">
    <div class="col">
     <div class="bg-light"><h3>配送先編集</h3></div>
     <p id="notice"></p>
　　　<%= form_with model: @address, url: address_path(@address) do |f| %>

　　　<div class="row mb-3">
      <%= f.label '郵便番号(ハイフンなし)', class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
      <%= f.text_field :postal_code, class: "form-control", :placeholder => "0000000" %>
      </div>
     </div>
     <div class="row mb-3">
      <%= f.label '住所', class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
      <%= f.text_field :address, class: "form-control", :placeholder => "東京都さいたま市おおさか123" %>
      </div>
     </div>
      <div class="row mb-3">
      <%= f.label '宛名', class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control", :placeholder => "令和道子"%>
      <div class="text-right"><%= f.submit '変更内容を保存', class: 'btn btn-success' %></div>
      </div>
     </div>
     <% end %>
    </div>
　 </div>
　</div>
 </main>
</body>





