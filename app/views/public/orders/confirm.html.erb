<body>
 <main>
  <div class="container">
   <div class="row">
    <div class="col">
     <p id="notice"></p>
     <div class="bg-light"><h3>注文情報確認</h3></div>
     <p></p><h3></h3>
    <div class="row align-items-start">
     <div class="col-8">
    <table border="1">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
       <% @total_price = 0 %>
        <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%= image_tag cart_item.item.get_image,  width: '100px', height: '70px' %>
            <%= cart_item.item.name %>
          </td>
          <td>￥<%= cart_item.item.with_tax_price%></td>
          <td>
          <%= cart_item.amount %>
          </td>
          <td><%= cart_item.subtotal%>
          </td>
        </tr>
        <% @total_price += cart_item.subtotal %>
        <% end %>
      </tbody>
    </table>
     <table border="1" class="float-left">
      <thead>
        <tr><td>送料</td><td><%= @order.postage %></td></tr>
        <tr><td>商品合計</td><td><%= @total_price.to_s(:delimited) %></td></th>
        <tr><td>請求合計</td><td><%= @amount_money= @total_price + @order.postage.to_i%></td></th>
        </tr>
      </thead>
    </table>
    </div>

<strong><h4>支払方法</h4></strong>
<%= @order.payment_method_i18n %>
<strong><h4>お届け先</h4></strong>
<%= @order.postal_code %>
<%= @order.address %>
<%= @order.name %>
</div>

<%= form_with model: @order, url: orders_path, method: :post do |f| %>

            <%= f.hidden_field :payment_method %>
            <%= f.hidden_field :name %>
            <%= f.hidden_field :postal_code %>
            <%= f.hidden_field :address %>
            <%= f.hidden_field :amount_money,value: @amount_money %>
            <%= f.submit "注文を確定する", class: "btn btn-success" %>
            <% end %>

     </div>
　　</div>
　 </div>
　</div>
 </main>
</body>
