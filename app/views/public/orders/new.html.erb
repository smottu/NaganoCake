<body>
 <main>
  <div class="container">
   <div class="row">
    <div class="col">
     <p id="notice"></p>
     <div class="bg-light"><h3>注文情報入力</h3></div>
     <p id="notice"></p>


<%= form_with model: @order, url: orders_confirm_path do |f| %>
<strong><h4>支払方法</h4></strong>
<div class="form-check">
<%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
<%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %><br>
<%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
<%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>
</div>

<strong><h4>お届け先</h4></strong>
<div class="form-check">
<%= f.radio_button :select_address, '0' %>
<%= f.label :select_address, 'ご自身の住所', value: 0 %><br>
〒<%= @customer.postal_code %>
<%= @customer.address %><br>
<%= @customer.first_name %>
<%= @customer.last_name %><br>
<%= f.radio_button :select_address, '1' %>
<%= f.label :select_addresss, '登録済住所から選択', value: 1 %><br>
<%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display), :include_blank => "選択してください"%>
</div>

<div class="form-check">
<%= f.radio_button :select_address, '2' %>
<%= f.label :select_addresss, '新しいお届け先', value: 2 %>
</div>

<div class="row mb-2">
<%= f.label '郵便番号(ハイフンなし)', class: "col-sm-2 col-form-label" %>
<div class="col-sm-4">
<%= f.text_field :postal_code, class: "form-control", :placeholder => "0000000" %>
</div>
</div>
<div class="row mb-2">
<%= f.label '住所', class: "col-sm-2 col-form-label" %>
<div class="col-sm-4">
<%= f.text_field :address, class: "form-control", :placeholder => "東京都さいたま市おおさか123" %>
</div>
</div>
<div class="row mb-2">
<%= f.label '宛名', class: "col-sm-2 col-form-label" %>
<div class="col-sm-4">
<%= f.text_field :name, class: "form-control", :placeholder => "令和道子"%>
<p></p>
<div class="mx-auto" style="width: 200px;">
<%= f.submit "確認画面へ進む", class: "btn btn-success" %>
</div>
</div>
</div>

<% end %>
　　</div>
　 </div>
　</div>
 </main>
</body>
