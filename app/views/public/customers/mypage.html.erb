<body>
 <main>
  <div class="container">
   <div class="row">
    <div class="col">
     <h1>マイページ</h1>
     <p></p>

     <div class="bg-light">
      <h3>登録情報　<%= link_to "編集する", customers_information_edit_path, class: "btn btn-success" %></h3>
     </div>

      <table class="table table-bordered">
       <tr><td class="table-light" style="width: 30%" %>氏名</td><td><%= @customer.first_name %>  <%= @customer.last_name %></td></tr>
       <tr><td class="table-light">カナ</td><td><%= @customer.first_name_kana %>  <%= @customer.last_name_kana %></td></tr>
       <tr><td class="table-light">郵便番号</td><td><%= @customer.postal_code %></td></tr>
       <tr><td class="table-light">住所</td><td><%= @customer.address %></td></tr>
       <tr><td class="table-light">電話番号</td><td><%= @customer.telephone_number %></td></tr>
       <tr><td class="table-light">メールアドレス</td><td><%= @customer.email %></td></tr>
      </table>
     <div>
      <h3>配送先　　<%= link_to "一覧を見る", addresses_path, class: "btn btn-primary" %></h3>
     </div>
     <div>
      <h3>注文履歴　<%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %></h3>
     </div>
　 </div>
　</div>
 </main>
</body>
